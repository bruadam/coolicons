{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "coolicons",
  "title": "Coolicons",
  "description": "Search, preview and copy Coolicons. Pick icon style and copy as name, SVG, React or React Native component",
  "icon": "icon.png",
  "author": "bruadam",
  "categories": [
    "Design Tools",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Coolicons",
      "description": "Search and copy Coolicons",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "view",
      "type": "dropdown",
      "required": false,
      "title": "View",
      "description": "Choose between grid or list view",
      "default": "grid",
      "data": [
        {
          "title": "Grid",
          "value": "grid"
        },
        {
          "title": "List",
          "value": "list"
        }
      ]
    },
    {
      "name": "iconSize",
      "type": "textfield",
      "required": false,
      "title": "Icon Size",
      "description": "Default icon size for exports",
      "default": "24",
      "placeholder": "24"
    },
    {
      "name": "iconColor",
      "type": "textfield",
      "required": false,
      "title": "Icon Color",
      "description": "Default icon color for exports",
      "default": "#000000",
      "placeholder": "#000000"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.82.5",
    "@raycast/utils": "^1.17.0",
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "^19.0.10",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "sharp": "^0.34.4",
    "sharp-cli": "^5.2.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
